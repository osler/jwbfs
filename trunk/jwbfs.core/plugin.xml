            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="%menu.file">
            <command
                  commandId="it.jwbfs.core.exit"
                  label="%command.exit"
                  style="push">
            </command>
         </menu>
         <menu
