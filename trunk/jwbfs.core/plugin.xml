         <menu
               label="%menu.covers">
            <command
                  commandId="it.jwbfs.core.updateCoverForced"
                  label="%command.covers.update.selected"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
