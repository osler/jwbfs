                  label="Cut Selected"
                  style="push">
                  <parameter
                        name="diskFrom"
                        value="activeID">
                  </parameter>
                  <parameter
                        name="diskTo"
                        value="">
                  </parameter>
             <visibleWhen>
                       	<with variable="activePartId">
                       		<and>
           						<not>
