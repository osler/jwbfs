           						<not>
           					 		<equals value="it.jwbfs.ui.SettingsView"/>
           						</not>
           						<not>
           					 		<equals value="it.jwbfs.ui.CoverView"/>
           						</not>
           					</and>   	           						      					           							          						
           				</with>
            </visibleWhen>  
            </command>
            <command
                  commandId="it.jwbfs.core.updateGameList"
                  icon="icons/bar/view-refresh.png"
                  label="Refresh disks"
                  style="push">
               <parameter
                     name="diskID"
                     value="activeDiskID">
               </parameter>
             <visibleWhen>
                       	<with variable="activePartId">
                       		<and>
           						<not>
           					 		<equals value="it.jwbfs.ui.SettingsView"/>
           						</not>
           						<not>
