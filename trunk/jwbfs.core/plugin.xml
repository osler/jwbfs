                  commandId="it.jwbfs.core.refreshAllDisks"
                  label="%command.disks.refresh"
                  style="push">
            </command>
            <menu
                  label="%menu.disks.views">
            <command
                  commandId="it.jwbfs.core.changeDisksPerspective"
                  label="%command.disks.num.1"
                  style="push">
                  <parameter 
               		name="numDisks" 
               		value="1"> 
